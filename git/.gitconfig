# This is Git's per-user configuration file.
[user]
	email = ztruth@qq.com
	name = zllynx

[merge]
	tool = custom

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvim"]
  cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
[mergetool "custom"]
	cmd = code --wait $LOCAL $BASE $REMOTE $MERGED || nvim -d $LOCAL $BASE $REMOTE $MERGED || vim -d $LOCAL $BASE $REMOTE $MERGED
	trustExitCode = true
[commit]
	template = ~/.gitmessage
